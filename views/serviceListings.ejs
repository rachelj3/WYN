<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WYN: Services</title>
    <link rel="stylesheet" href="stylesheets/WYN.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
</head>
<body style="background-color: #FEF5E4">

    <%- include("header")%>


        <!-- <div>
            <form action="/serviceListings" method="POST" class="servicesFilter">
                <span>
                    <input type="text" placeholder="Search" aria-label="Search" id="Search" name="Search">
                </span>


                <span>
                    <button class="blueButton" type="submit" value="Submit">Filter</button>
                </span>
            </form>
        </div> -->
    
        <div>
            <form method="GET" action="/serviceListings" style="margin-bottom: 1rem;">
                <input 
                  type="text" 
                  name="keyword" 
                  placeholder="Search posts..." 
                  style="margin-top: 100px; margin-left: 638px; font-family: 'Josefin Sans', sans-serif; border-radius: 10px; padding: 10px; background-color: white; font-size: 20px"
                />
                <button type="submit" class="blueButton centering" style="margin-top: 25px">Search</button>
              </form>
        </div>
        <div class="service-array" style="padding-bottom: 100px">
            
            <% services.forEach(service => { %>
                <% poster = users.find(element => element.id === service.postingUserId); %>
                <div class="service-item flex-box-column">
                    <div class="flex-item">
                        <img src="<%= service.imageURL %>">
                    </div>
                    <div class="flex-item">
                        <h3><%= service.location %></h3>
                    </div>
                    <div class="flex-item">
                        <h2 class="underlineLink"><a href="/service/<%= encodeURIComponent(service.id) %>"><%= service.title %></a></h2>
                    </div>
                    <div class="flex-item">
                        <h3><%= poster.username %></h3>
                    </div>
                </div>
              <% }) %>
        </div>
    
    <footer>
        <div class="flex-box-row" id="footer-div">
            <div class="flex-item">
                <h3><a class="underlineLink" href="/">home</a></h3>
            </div>
            <div class="flex-item">
                <img src="/images/main-logo-white.png">
            </div>
            <div class="flex-item">
                <h3><a class="underlineLink" href="aboutUs.ejs">about us</a></h3>
            </div>
        </div>
    </footer>

</body>
</html>
